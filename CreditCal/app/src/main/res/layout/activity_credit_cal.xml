<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.venu.creditcal.CreditCal"
    android:background="#fefdfd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter CreditCard Balance"
        android:id="@+id/bal"
        android:layout_alignBottom="@+id/tbal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tbal"
        android:paddingRight="10dp"
        android:textSize="20dp"
        android:background="#070707"
        android:textColor="#fefefe"
        android:layout_centerInParent="true"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/bal"
        android:layout_toEndOf="@+id/bal"
        android:textSize="20dp"
        android:textColor="#fd0505"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Yearly interest rate(%)"
        android:id="@+id/intst"
        android:layout_below="@+id/bal"
        android:layout_alignRight="@+id/bal"
        android:layout_alignEnd="@+id/bal"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fefcfc"
        android:background="#070707" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tinst"
        android:layout_below="@+id/tbal"
        android:layout_alignLeft="@+id/tbal"
        android:layout_alignStart="@+id/tbal"
        android:layout_alignRight="@+id/tbal"
        android:layout_alignEnd="@+id/tbal"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/intst" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Minimum Payment"
        android:id="@+id/payment"
        android:layout_below="@+id/intst"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/intst"
        android:layout_alignEnd="@+id/intst"
        android:layout_alignBottom="@+id/tpayment"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#fefefe"
        android:background="#050505"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tpayment"
        android:layout_below="@+id/tinst"
        android:layout_alignLeft="@+id/tinst"
        android:layout_alignStart="@+id/tinst"
        android:layout_alignRight="@+id/tinst"
        android:layout_alignEnd="@+id/tinst"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Card Balance"
        android:id="@+id/fcb"
        android:layout_below="@+id/payment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/payment"
        android:layout_alignEnd="@+id/payment"
        android:background="#060606"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:textColor="#fdfafa"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_alignBottom="@+id/tfcb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfcb"
        android:layout_below="@+id/tpayment"
        android:layout_alignLeft="@+id/tpayment"
        android:layout_alignStart="@+id/tpayment"
        android:layout_alignRight="@+id/tpayment"
        android:layout_alignEnd="@+id/tpayment"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Months Remaining"
        android:id="@+id/mr"
        android:layout_below="@+id/fcb"
        android:textSize="20dp"
        android:background="#020202"
        android:textColor="#fcfcfc"
        android:textAlignment="textStart"
        android:layout_alignRight="@+id/fcb"
        android:layout_alignEnd="@+id/fcb"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/tmr" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tmr"
        android:layout_below="@+id/fcb"
        android:layout_toRightOf="@+id/mr"
        android:layout_alignRight="@+id/tfcb"
        android:layout_alignEnd="@+id/tfcb"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest Paid will be"
        android:id="@+id/ip"
        android:layout_below="@+id/mr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/mr"
        android:layout_alignEnd="@+id/mr"
        android:textSize="20dp"
        android:textColor="#fefcfc"
        android:background="#010101"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/tip"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip"
        android:layout_below="@+id/mr"
        android:layout_toRightOf="@+id/ip"
        android:layout_alignRight="@+id/tmr"
        android:layout_alignEnd="@+id/tmr"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:id="@+id/cal"
        android:layout_below="@+id/ip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/clear"
        android:layout_below="@+id/cal" />

</RelativeLayout>
